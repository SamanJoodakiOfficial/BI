<!DOCTYPE html>
<html lang="fa" dir="rtl">
  <%- include("../../partials/head") %>

  <body class="bg-primaryBackground">
    <div class="flex flex-col lg:flex-row min-h-screen">
      <!-- Sidebar -->
      <%- include('../../partials/sidebar') %>

      <!-- Main Content -->
      <main class="flex-1 p-4 lg:p-6">
        <header
          class="w-full flex items-center justify-between flex-wrap gap-2"
        >
          <h2 class="font-bold text-202020 text-lg lg:text-xl">بانک سوالات</h2>
          <a
            href="/dashboard/questions/addQuestion"
            class="h-10 px-4 lg:h-12 lg:px-6 bg-primary text-white flex items-center justify-center font-bold rounded-lg shadow-lg shadow-primary/30 hover:shadow-xl transition-all duration-200"
            ><i class="ri-add-line"></i
            ><span class="hidden sm:inline">ثبت سوال جدید</span></a
          >
        </header>

        <!-- Search Form -->
        <form
          action="#"
          class="w-full rounded-lg mt-8 flex flex-col gap-4 items-center justify-end"
        >
          <input
            class="w-full h-10 lg:h-12 border rounded-lg border-CBCBCB text-606060 bg-white focus:ring-2 focus:ring-primary text-right outline-none px-4"
            type="text"
            name=""
            id=""
            placeholder="جست و جو بین 1،000 سوال طرح شده"
          />

          <div class="w-full flex flex-col sm:flex-row gap-2">
            <select
              name="group"
              class="w-full sm:w-auto border rounded-lg border-CBCBCB text-606060 bg-white focus:ring-2 focus:ring-primary outline-none"
            >
              <option value="group">گروه</option>
              <option value="group">شبکه</option>
              <option value="group">نرم افزار</option>
              <option value="group">سخت افزار</option>
              <option value="group">برنامه نویسی</option>
            </select>

            <select
              name="subGroup"
              class="w-full sm:w-auto border rounded-lg border-CBCBCB text-606060 bg-white focus:ring-2 focus:ring-primary outline-none"
            >
              <option value="group">زیرگروه</option>
              <option value="group">شبکه</option>
              <option value="group">نرم افزار</option>
              <option value="group">سخت افزار</option>
              <option value="group">برنامه نویسی</option>
            </select>

            <button
              type="submit"
              class="md:w-[150px] h-12 sm:w-full lg:h-10 flex items-center gap-1 justify-center rounded-lg bg-primary text-center text-white font-bold shadow-lg shadow-primary/30 hover:shadow-xl transition-all duration-200"
            >
              <i class="ri-search-line"></i>
              جست و جو
            </button>
          </div>
        </form>

        <!--Success-->
        <% if (successMessage && successMessage.length > 0) { %>
          <div
            class="w-full min-h-8 mt-4 rounded-lg bg-success-light-1 text-white text-sm flex items-center p-4 gap-1"
          >
            <i class="ri-error-warning-line"></i>
            <%= successMessage %>
          </div>
          <% } %>
        <!-- Question Boxes -->
        <div class="w-full grid grid-cols-1 sm:grid-cols-2 gap-4">
          <% var questions = questions || '' %> <% if (questions &&
          questions.length >= 1) { %> <% questions.forEach((question) => { %>
          <!-- Question Box -->
          <div
            class="w-full min-h-[200px] relative bg-white border rounded-lg mt-8 p-4 border-CBCBCB overflow-auto flex flex-col gap-2"
          >
            <!-- Question actions -->
            <div class="flex items-center gap-4 absolute left-4 sm:left-6">
              <!-- Edit question -->
              <a href="/dashboard/questions/updateQuestion/<%= question._id %>" class="cursor-pointer text-lg text-404040">
                <i class="ri-edit-line"></i>
              </a>

              <!-- Delete question -->
              <a href="/dashboard/questions/deleteQuestion/<%= question._id %>" class="cursor-pointer text-lg text-404040">
                <i class="ri-delete-bin-6-line"></i>
              </a>
            </div>

            <!-- Question details - Group, Sub Group, Text -->
            <div class="flex flex-wrap items-center gap-1">
              <div class="flex items-center gap-1">
                گروه:
                <div class="w-fit text-xs bg-warning p-1 text-white rounded-lg">
                  <%= question.groupID ? question.groupID.name : 'نام گروه پیدا نشد'%>
                </div>
              </div>

              <div class="flex items-center gap-1">
                زیرگروه:
                <div class="w-fit text-xs bg-success p-1 text-white rounded-lg">
                  <%= question.subGroupID ? question.subGroupID.name : 'نام زیرگروه پیدا نشد'%>
                </div>
              </div>
            </div>

            <!-- Question text -->
            <p class="text-404040 text-sm sm:text-base"><%= question.text %></p>

            <!-- Question answer & count of answers -->
            <div
              class="flex flex-wrap items-center justify-between gap-2 sm:gap-4"
            >
              <a
                href="/dashboard/questions/<%= question._id %>/responses"
                class="w-full sm:w-auto h-10 px-8 flex items-center gap-1 justify-center rounded-lg bg-primary text-center text-white font-bold shadow-lg shadow-primary/30 hover:shadow-xl transition-all duration-200 text-sm sm:text-base"
              >
                ثبت پاسخ جدید
              </a>

              <div class="flex items-center gap-1">
                تعداد پاسخ:
                <span
                  class="w-8 h-8 flex items-center justify-center bg-CBCBCB text-606060 rounded-lg"
                >
                  20
                </span>
              </div>
            </div>
          </div>
          <% }) } else { %>
          <p class="text-lg mt-4 text-primary"><%= text %></p>
          <% } %>
        </div>

        <footer
          class="w-full flex items-center justify-center flex-wrap gap-4 mt-8"
        >
          <a href="#" class="text-404040">بعدی</a>
          <a href="#" class="underline text-primary">1</a>
          <a href="#" class="underline">2</a>
          <a href="#" class="underline">3</a>
          <a href="#" class="underline">4</a>
          <a href="#" class="underline">5</a>
          <a href="#" class="text-404040">قبلی</a>
        </footer>
      </main>
    </div>
  </body>
</html>
